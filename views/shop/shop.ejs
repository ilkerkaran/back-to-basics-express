<div class = "card-holder">
  <%for (let i = 0; i< products.length;i ++) {const product=  products[i]; %>
  <div class="card">
    <%- include("../includes/book-detail.ejs", {product: product}) %>
    <div class="card-content actions">
      <a href="/shop/<%= product.id %>" class="button">Show Details</a>
      <form action="shop/add-to-cart">
      <input class="button "type="button" value="Add to Cart!">
      <input type="hidden" name="id" value="<%= product.id%>">
      </form>
    </div>
  </div>
  <% }%>
</div>


